@model FitnessCenter.Web.ViewModels.AppointmentCreateVM

@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-calendar-plus"></i> Book Appointment</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="GymServiceId" class="form-label">Service</label>
                            <select asp-for="GymServiceId" class="form-select" asp-items="ViewBag.GymServiceId">
                                <option value="">-- Select Service --</option>
                            </select>
                            <span asp-validation-for="GymServiceId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrainerId" class="form-label">Trainer</label>
                            <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId">
                                <option value="">-- Select Trainer --</option>
                            </select>
                            <span asp-validation-for="TrainerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDateTime" class="form-label">Start Date & Time</label>
                            <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="StartDateTime" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Book Appointment
                            </button>
                            <a asp-action="MyAppointments" class="btn btn-secondary">My Appointments</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
