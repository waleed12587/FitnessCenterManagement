@model FitnessCenter.Web.ViewModels.AppointmentCreateVM

@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-calendar-plus"></i> Book Appointment</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="GymServiceId" class="form-label">Service</label>
                            <select asp-for="GymServiceId" class="form-select" asp-items="ViewBag.GymServiceId" id="serviceSelect">
                                <option value="">-- Select Service --</option>
                            </select>
                            <span asp-validation-for="GymServiceId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TrainerId" class="form-label">Trainer</label>
                            <select asp-for="TrainerId" class="form-select" id="trainerSelect">
                                <option value="">-- Select Service First --</option>
                            </select>
                            <span asp-validation-for="TrainerId" class="text-danger"></span>
                            <small class="form-text text-muted">Please select a service first to see available trainers.</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AppointmentDate" class="form-label">Date</label>
                                <input asp-for="AppointmentDate" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="AppointmentTime" class="form-label">Time</label>
                                <input asp-for="AppointmentTime" type="time" class="form-control" />
                                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label">Payment Method</label>
                            <select asp-for="PaymentMethod" class="form-select" asp-items="ViewBag.PaymentMethods">
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Book Appointment
                            </button>
                            <a asp-action="MyAppointments" class="btn btn-secondary">My Appointments</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const serviceSelect = document.getElementById('serviceSelect');
            const trainerSelect = document.getElementById('trainerSelect');

            serviceSelect.addEventListener('change', function() {
                const serviceId = this.value;
                
                // Clear trainer dropdown
                trainerSelect.innerHTML = '<option value="">-- Loading Trainers --</option>';
                trainerSelect.disabled = true;

                if (!serviceId) {
                    trainerSelect.innerHTML = '<option value="">-- Select Service First --</option>';
                    trainerSelect.disabled = false;
                    return;
                }

                // Fetch trainers for the selected service
                fetch(`/api/TrainersApi/available?serviceId=${serviceId}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        trainerSelect.innerHTML = '<option value="">-- Select Trainer --</option>';
                        
                        if (data && data.length > 0) {
                            data.forEach(trainer => {
                                const option = document.createElement('option');
                                option.value = trainer.id;
                                option.textContent = trainer.fullName + (trainer.specialty ? ` (${trainer.specialty})` : '');
                                trainerSelect.appendChild(option);
                            });
                        } else {
                            trainerSelect.innerHTML = '<option value="">-- No trainers available for this service --</option>';
                        }
                        
                        trainerSelect.disabled = false;
                    })
                    .catch(error => {
                        console.error('Error fetching trainers:', error);
                        trainerSelect.innerHTML = '<option value="">-- Error loading trainers --</option>';
                        trainerSelect.disabled = false;
                    });
            });

            // If a service is already selected (e.g., on validation error), load trainers
            if (serviceSelect.value) {
                serviceSelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}
