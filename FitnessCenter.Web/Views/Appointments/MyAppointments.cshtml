@model IEnumerable<FitnessCenter.Web.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check"></i> My Appointments</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Appointment
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date/Time</th>
                        <th>Trainer</th>
                        <th>Service</th>
                        <th>Price</th>
                        <th>Appointment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.StartDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td><strong>@a.Trainer?.FullName</strong></td>
                            <td>@a.GymService?.Name</td>
                            <td><strong class="text-success">@a.Price.ToString("C")</strong></td>
                            <td>
                                @switch (a.Status)
                                {
                                    case AppointmentStatus.Pending:
                                        <span class="badge bg-warning">Pending</span>
                                        break;
                                    case AppointmentStatus.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case AppointmentStatus.Rejected:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                    case AppointmentStatus.Cancelled:
                                        <span class="badge bg-secondary">Cancelled</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (a.Status == AppointmentStatus.Approved)
                                {
                                    <span class="text-success"><i class="bi bi-check-circle"></i> Approved</span>
                                }
                                else if (a.Status == AppointmentStatus.Pending)
                                {
                                    <span class="text-muted">Waiting for approval</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You don't have any appointments yet.
        </div>
    }
</div>
