@model FitnessCenter.Web.ViewModels.TrainerEditVM


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trainer</h4>
<hr />
<h5>Services (Services this trainer can provide)</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialty" class="control-label"></label>
                <input asp-for="Specialty" class="form-control" />
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GymId" class="control-label"></label>
                <select asp-for="GymId" class="form-control" asp-items="ViewBag.GymId"></select>
                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.Services.Count; i++)
            {
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input"
                               asp-for="Services[@i].IsSelected" />

                        <label class="form-check-label">
                            @Model.Services[i].Name
                        </label>

                        <input type="hidden" asp-for="Services[@i].GymServiceId" />
                        <input type="hidden" asp-for="Services[@i].Name" />
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
