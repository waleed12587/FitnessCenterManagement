@model IEnumerable<FitnessCenter.Web.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Antrenörler</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Antrenör Ekle
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Uzmanlık</th>
                        <th>Biyografi</th>
                        <th>Spor Salonu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.FullName)</strong>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Specialty))
                                {
                                    <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Specialty)</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Bio))
                                {
                                    <span class="text-muted">@(item.Bio.Length > 50 ? item.Bio.Substring(0, 50) + "..." : item.Bio)</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.Gym != null)
                                {
                                    <i class="bi bi-building"></i> @Html.DisplayFor(modelItem => item.Gym.Name)
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Detaylar">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Henüz antrenör eklenmemiş.
        </div>
    }
</div>
