@model FitnessCenter.Web.ViewModels.AIWorkoutRequestVM

@{
    ViewData["Title"] = "AI Exercise Recommendation";
}

<div class="ai-workout-container">
    <div class="container mt-4">
        <!-- Hero Section -->
        <div class="hero-section text-center mb-5 fade-in">
            <div class="hero-icon">
                <i class="bi bi-robot"></i>
            </div>
            <h1 class="display-4 fw-bold gradient-text mb-3">AI-Powered Fitness Transformation</h1>
            <p class="lead text-muted">Get your personalized workout and nutrition plan with AI-generated transformation preview</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="form-card card shadow-lg border-0 fade-in">
                    <div class="card-header bg-gradient-primary text-white py-4">
                        <h3 class="mb-0 text-center">
                            <i class="bi bi-clipboard-data"></i> Create Your Personalized Plan
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="GetRecommendation" method="post" enctype="multipart/form-data" id="workoutForm">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <!-- Personal Information Section -->
                            <div class="form-section mb-4">
                                <h5 class="section-title">
                                    <i class="bi bi-person-circle"></i> Personal Information
                                </h5>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Age" class="form-label fw-semibold">
                                            <i class="bi bi-calendar text-primary"></i> Age
                                        </label>
                                        <input asp-for="Age" class="form-control form-control-lg" placeholder="Enter your age" />
                                        <span asp-validation-for="Age" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Gender" class="form-label fw-semibold">
                                            <i class="bi bi-gender-ambiguous text-info"></i> Gender
                                        </label>
                                        <select asp-for="Gender" class="form-select form-select-lg">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Height" class="form-label fw-semibold">
                                            <i class="bi bi-rulers text-success"></i> Height (cm)
                                        </label>
                                        <input asp-for="Height" class="form-control form-control-lg" placeholder="e.g., 175" />
                                        <span asp-validation-for="Height" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Weight" class="form-label fw-semibold">
                                            <i class="bi bi-speedometer2 text-warning"></i> Weight (kg)
                                        </label>
                                        <input asp-for="Weight" class="form-control form-control-lg" step="0.1" placeholder="e.g., 70.5" />
                                        <span asp-validation-for="Weight" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Fitness Goals Section -->
                            <div class="form-section mb-4">
                                <h5 class="section-title">
                                    <i class="bi bi-bullseye"></i> Fitness Goals
                                </h5>
                                <div class="mb-3">
                                    <label asp-for="Goal" class="form-label fw-semibold">What's your primary goal?</label>
                                    <select asp-for="Goal" class="form-select form-select-lg">
                                        <option value="Weight Loss">üí™ Weight Loss</option>
                                        <option value="Weight Gain">üìà Weight Gain</option>
                                        <option value="Muscle Building">üèãÔ∏è Muscle Building</option>
                                        <option value="Strength">‚ö° Strength</option>
                                        <option value="General Fitness">üåü General Fitness</option>
                                        <option value="Endurance">üèÉ Endurance</option>
                                    </select>
                                    <span asp-validation-for="Goal" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ActivityLevel" class="form-label fw-semibold">Current Activity Level</label>
                                    <select asp-for="ActivityLevel" class="form-select form-select-lg">
                                        <option value="Low">üõãÔ∏è Low (Sedentary)</option>
                                        <option value="Moderate">üö∂ Moderate (1-3 days/week)</option>
                                        <option value="High">üèÉ High (4-6 days/week)</option>
                                        <option value="Very High">üî• Very High (Daily training)</option>
                                    </select>
                                    <span asp-validation-for="ActivityLevel" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Additional Information Section -->
                            <div class="form-section mb-4">
                                <h5 class="section-title">
                                    <i class="bi bi-info-circle"></i> Additional Information
                                </h5>
                                <div class="mb-3">
                                    <label asp-for="HealthConditions" class="form-label fw-semibold">Health Conditions / Notes (Optional)</label>
                                    <textarea asp-for="HealthConditions" class="form-control" rows="3" placeholder="Any health conditions, injuries, or special notes that might affect your workout plan..."></textarea>
                                    <span asp-validation-for="HealthConditions" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Photo Upload Section -->
                            <div class="form-section mb-4">
                                <h5 class="section-title">
                                    <i class="bi bi-camera-fill"></i> Transformation Preview (Optional)
                                </h5>
                                <div class="photo-upload-area">
                                    <div class="upload-preview" id="uploadPreview">
                                        <i class="bi bi-cloud-upload"></i>
                                        <p class="mb-0">Click to upload or drag and drop</p>
                                        <small class="text-muted">PNG, JPG up to 10MB</small>
                                    </div>
                                    <input asp-for="Photo" type="file" class="form-control d-none" accept="image/*" id="photoInput" />
                                    <label for="photoInput" class="upload-label">
                                        <i class="bi bi-camera"></i> Choose Photo
                                    </label>
                                    <small class="form-text text-muted d-block mt-2">
                                        <i class="bi bi-lightbulb"></i> Upload a clear photo of yourself to see an AI-generated preview of your transformation!
                                    </small>
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg btn-generate" id="submitBtn">
                                    <i class="bi bi-magic"></i> Generate My Personalized Plan
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-house"></i> Back to Home
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Container Styles */
    .ai-workout-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        padding-bottom: 3rem;
    }

    /* Hero Section */
    .hero-section {
        padding: 2rem 0;
    }

    .hero-icon {
        font-size: 4rem;
        color: #667eea;
        margin-bottom: 1rem;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Form Card */
    .form-card {
        border-radius: 20px;
        overflow: hidden;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    /* Form Sections */
    .form-section {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 15px;
        margin-bottom: 1.5rem;
        border-left: 4px solid #667eea;
    }

    .section-title {
        color: #667eea;
        font-weight: 600;
        margin-bottom: 1.5rem;
        font-size: 1.25rem;
    }

    .section-title i {
        margin-right: 0.5rem;
    }

    /* Form Controls */
    .form-control-lg, .form-select-lg {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        transition: all 0.3s ease;
    }

    .form-control-lg:focus, .form-select-lg:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    /* Photo Upload Area */
    .photo-upload-area {
        text-align: center;
    }

    .upload-preview {
        border: 3px dashed #667eea;
        border-radius: 15px;
        padding: 3rem 2rem;
        background: #f8f9fa;
        margin-bottom: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .upload-preview:hover {
        background: #e9ecef;
        border-color: #764ba2;
    }

    .upload-preview i {
        font-size: 3rem;
        color: #667eea;
        margin-bottom: 1rem;
    }

    .upload-preview.has-image {
        padding: 0;
        border: none;
    }

    .upload-preview img {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
        border-radius: 10px;
    }

    .upload-label {
        display: inline-block;
        padding: 12px 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .upload-label:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    /* Generate Button */
    .btn-generate {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 50px;
        padding: 15px 40px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .btn-generate:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-generate:active {
        transform: translateY(-1px);
    }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2rem;
        }

        .form-section {
            padding: 1rem;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Photo Upload Preview
        const photoInput = document.getElementById('photoInput');
        const uploadPreview = document.getElementById('uploadPreview');

        photoInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    uploadPreview.innerHTML = `<img src="${e.target.result}" alt="Preview" />`;
                    uploadPreview.classList.add('has-image');
                };
                reader.readAsDataURL(file);
            }
        });

        // Click on preview to trigger file input
        uploadPreview.addEventListener('click', function() {
            photoInput.click();
        });

        // Form submission loading state
        const form = document.getElementById('workoutForm');
        const submitBtn = document.getElementById('submitBtn');
        
        form.addEventListener('submit', function() {
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Generating...';
            submitBtn.disabled = true;
        });
    </script>
}
