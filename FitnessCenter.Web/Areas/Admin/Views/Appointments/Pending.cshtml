@model IEnumerable<FitnessCenter.Web.Models.Appointment>

@{
    ViewData["Title"] = "Pending Appointments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history"></i> Pending Appointments (Admin)</h2>
        <a asp-controller="Home" asp-action="Index" asp-area="" class="btn btn-secondary">
            <i class="bi bi-house"></i> Home
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date/Time</th>
                        <th>Trainer</th>
                        <th>Service</th>
                        <th>Member</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td>@a.StartDateTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <strong>@a.Trainer?.FullName</strong>
                            </td>
                            <td>@a.GymService?.Name</td>
                            <td>@a.Member?.UserName</td>
                            <td>@a.Price.ToString("C")</td>
                            <td>
                                <span class="badge bg-warning">@a.Status</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <form asp-action="Approve" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@a.Id" />
                                        <button class="btn btn-success" type="submit" title="Approve">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>
                                    </form>

                                    <form asp-action="Reject" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@a.Id" />
                                        <button class="btn btn-danger" type="submit" title="Reject">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No pending appointments.
        </div>
    }
</div>
